@{
    ViewBag.Title = "Edit Festival";
}
<br/>
<br/>
<br/>
@model IEnumerable<TSP_ASPLayer.WcfService.Festival>
    <legend>Edit a Festival</legend>
    <table class="table table-striped table-hover ">
        <thead>
            <tr class="active">
                <th>Name</th>
                <th>Location</th>
                <th>Date & Time</th>
                <th>Performers</th>
                <th>Tickets</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="success">
                    <td>@item.Name</td>
                    <td>@item.Location.Name</td>
                    <td>@item.DateAndTime.ToString("MMM dd, yyyy @HH:mm")</td>
                    <td>@foreach (var performer in item.Performers)
                        {
                            @performer.Name.Insert(performer.Name.Length, ", ")
                        }
                    </td>
                    <td>@item.Tickets.Length</td>
                </tr>
            }
        </tbody>
    </table>
