@using TSP_ASPLayer.WcfService
@{
    ViewBag.Title = "Add Festival";
}
<br/>
<br/>
<br/>
@using (Html.BeginForm("AddFestival", "Home", FormMethod.Post))
{
    <form class="form-horizontal">
        <fieldset>
            <legend>Add a Festival</legend>

            <!--Festival name-->
            <div class="form-group">
                <label for="inputFestivalName" class="col-lg-2 control-label">Festival Name:</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="inputFestivalName" placeholder="Type here..."/>
                </div>
            </div>

            <!--Date & time picker TODO-->
            <div class="form-group">
                <label for="inputFestivalDate" class="col-lg-2 control-label">Date & time:</label>
                <div class="col-lg-10">
                    <input type="datetime" class="form-control date" id="inputFestivalDate" placeholder="Pick a date & time..."/>
                </div>
            </div>


            <!--Location-->
            <div class="form-group">
                <label for="inputLocationName" class="col-lg-2 control-label">Location:</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="inputLocationName" placeholder="Type here..."/>
                </div>
            </div>

            <!--Buttons-->
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="reset" class="btn btn-default">Cancel</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </fieldset>
    </form>
}