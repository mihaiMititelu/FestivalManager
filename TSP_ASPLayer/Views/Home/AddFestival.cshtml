@{
    ViewBag.Title = "Add Festival";
}
<br/>
<br/>
<br/>
@model TSP_ASPLayer.Models.ProxyFestivalModels


@using (Html.BeginForm("AddFestival", "Home", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    <form class="form-horizontal">
        <fieldset>
            <legend>Add a Festival</legend>

            <!--Festival name-->
            <div class="form-group">
                <label class="col-lg-2 control-label">Festival Name:</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.ProxyName, "", htmlAttributes: new
                    {
                        @class = "form-control",
                        @type = "text",
                        @placeholder = "Type here..."
                    })
                    @Html.ValidationMessageFor(m => m.ProxyName, "", new {@class = "text-danger"})
                </div>
            </div>

            <!--Datepicker-->
            <div class="form-group">
                <label class="col-lg-2 control-label">Date:</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.ProxyDateAndTime, "",
                        htmlAttributes: new
                        {
                            @class = "form-control",
                            @id = "inputFestivalDate",
                            @type = "date"
                        })
                    @Html.ValidationMessageFor(m => m.ProxyName, "", new {@class = "text-danger"})
                </div>
            </div>

            <!--Location-->
            <div class="form-group">
                <label class="col-lg-2 control-label">Location name:</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.ProxyLocation.Name, "", htmlAttributes: new
                    {
                        @class = "form-control",
                        @type = "text",
                        @placeholder = "Where is it?"
                    })
                    @Html.ValidationMessageFor(m => m.ProxyName, "", new {@class = "text-danger"})
                </div>
            </div>

            <!--Location cap-->
            <div class="form-group">
                <label class="col-lg-2 control-label">Venue capacity:</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.ProxyLocation.Capacity, "", htmlAttributes: new
                    {
                        @class = "form-control",
                        @type = "number",
                        @placeholder = "Add a number of seats..."
                    })
                    @Html.ValidationMessageFor(m => m.ProxyName, "", new {@class = "text-danger"})
                </div>
            </div>

            <!--Performers-->
            <div class="form-group">
                <label class="col-lg-2 control-label">Who's playing:</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.ProxyPerformers, "", htmlAttributes: new
                    {
                        @class = "form-control",
                        @type = "text",
                        @placeholder = "List some artists..."
                    })
                    @Html.ValidationMessageFor(m => m.ProxyName, "", new {@class = "text-danger"})
                </div>
            </div>

            <!--Tickets-->
            <div class="form-group">
                <label class="col-lg-2 control-label">How many tickets are there:</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.ProxyTickets, "", htmlAttributes: new
                    {
                        @class = "form-control",
                        @type = "number",
                        @placeholder = "Pick a number, any number"
                    })
                    @Html.ValidationMessageFor(m => m.ProxyName, "", new {@class = "text-danger"})
                </div>
            </div>


            <!--Buttons-->
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-default">Clear</button>
                    <hr/>
                    <button type="reset" class="btn btn-default">@Html.ActionLink("Cancel", "Index")</button>
                </div>
            </div>
        </fieldset>
    </form>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}